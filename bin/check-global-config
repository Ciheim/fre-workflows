#!/bin/bash
# this script checks for differences between the default global.cylc 
# file in system-settings, and a user-specified one, if it exists.

if [ -f /home/$USER/.cylc/flow/global.cylc ];
then
	echo "user-specified global.cylc found."
	echo "checking for differences..."	
	diff /home/$USER/.cylc/flow/global.cylc /home/fms/fre-canopy/system-settings/flow/global.cylc
fi
