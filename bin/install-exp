#!/bin/csh -f
source $MODULESHOME/init/csh
set echo
cylc validate --check-circular -O $1 .
if ($status) then
    echo "ERROR in validation"
    exit 1
endif
cylc install -O $1 --workflow-name $1

set tool_ops=`cat ./rose-suite.conf  | grep SITE | sed 's/SITE=//' | sed 's/\"//' | sed 's/\"//'`
echo "tool_ops = ${tool_ops}"
if ($tool_ops == "ppan") then
	echo "will tool ops."
	ls /home/$USER/cylc-run/$1/runN/
endif
